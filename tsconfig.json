{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "module": "esnext",
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src/**/*.ts"
    ],
}